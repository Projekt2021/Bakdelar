@page

@model IndexModel
@{
    ViewData["Title"] = "Välkommen";
}
@if (Model.Error)
{

}
else
{
<div class="d-flex flex-wrap justify-content-lg-center">
        @foreach (var product in Model.Products)
        {
            <div class="card m-lg-4" style="width: 15rem; ">
                <img class="card-img-top" src="@product.ImageLink" alt="Product image">
                <div class="card-body">
                    <h5 class="card-title">@product.ProductName</h5>
                    <p class="card-text">@product.ProductDescription</p>
                    <a href="~/Item/@product.Id" class="btn btn-primary">Visa detaljer</a>
                </div>
            </div>

        }
    </div>
    }



